#!/usr/bin/env bash
set -eo pipefail

indent() {
    RE="s/^/       /"
    [ $(uname) == "Darwin" ] && sed -l "$RE" || sed -u "$RE"
}

PROJECT_NAME="<%= projectName %>"

echo "-----> A little bit of housekeeping"
rm -rf $PROJECT_NAME/apps/core/assets
rm -rf .build
rm -rf node_modules
rm -rf $BUILD_DIR/.heroku/vendor/node

echo
