#!/usr/bin/env bash
set -eo pipefail

indent() {
    RE="s/^/       /"
    [ $(uname) == "Darwin" ] && sed -l "$RE" || sed -u "$RE"
}

cd kaiju/static/
echo "-----> Running bower install"
bower install -q
echo "-----> Running npm install"
npm install
echo "-----> grunt compile-sass"
grunt compile-sass

echo
