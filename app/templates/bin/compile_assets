#!/usr/bin/env bash
set -eo pipefail

indent() {
    RE="s/^/       /"
    [ $(uname) == "Darwin" ] && sed -l "$RE" || sed -u "$RE"
}

PROJECT_NAME="<%= projectName %>"

pushd $PROJECT_NAME/static/
echo "-----> Running bower install"
bower install -q
echo "-----> Running npm install"
npm install
echo "-----> grunt compile-sass"
grunt publish
popd

echo
